{
    "name": "terminal42/contao-news_newsletter",
    "description": "Allows you to send your news as a newsletter using the Notification Center.",
    "keywords": ["contao", "news", "newsletter"],
    "type": "contao-bundle",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "terminal42 gmbh",
            "homepage": "http://www.terminal42.ch"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/terminal42"
        },
        {
            "type": "other",
            "url": "https://ko-fi.com/terminal42"
        }
    ],
    "support": {
        "issues": "https://github.com/terminal42/contao-news_newsletter/issues",
        "source": "https://github.com/terminal42/contao-news_newsletter",
        "forum": "https://community.contao.org"
    },
    "require": {
        "php": "^7.1 || ^8.0",
        "contao/core-bundle": "^4.9",
        "contao/news-bundle": "^4.9",
        "contao/newsletter-bundle": "^4.9",
        "codefog/contao-haste": "^4.11.4",
        "terminal42/notification_center": "^1.3.5"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "contao/easy-coding-standard": "^3.0"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Terminal42\\NewsNewsletterBundle\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Terminal42\\NewsNewsletterBundle\\ContaoManager\\Plugin"
    },
    "scripts": {
        "cs-fixer": [
            "vendor/bin/ecs check src/ --fix --ansi"
        ]
    }
}
